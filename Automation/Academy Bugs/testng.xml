<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Cross Browser Suite" parallel="tests" thread-count="3">

    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.DashboardTest"/>
            <class name="tests.SocialShareTest"/>
            <class name="tests.ContactUsTest"/>
            <class name="tests.ProductDetailsTest"/>
            <class name="tests.SignupTest"/>
            <class name="tests.LoginTest"/>
            <class name="tests.VideoPlayerTest"/>
            <class name="tests.BookingTableTests"/>
            <class name="tests.TypeOfBugsTests"/>
            <class name="tests.FindBugsTest"/>
            <class name="tests.ReportBugTest"/>
            <class name="tests.FooterTest"/>
        </classes>
    </test>
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.DashboardTest"/>
            <class name="tests.SocialShareTest"/>
            <class name="tests.ContactUsTest"/>
            <class name="tests.ProductDetailsTest"/>
            <class name="tests.SignupTest"/>
            <class name="tests.LoginTest"/>
            <class name="tests.VideoPlayerTest"/>
            <class name="tests.BookingTableTests"/>
            <class name="tests.TypeOfBugsTests"/>
            <class name="tests.FindBugsTest"/>
            <class name="tests.ReportBugTest"/>
            <class name="tests.FooterTest"/>
        </classes>
    </test>
    <test name="Edge Tests">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.DashboardTest"/>
            <class name="tests.SocialShareTest"/>
            <class name="tests.ContactUsTest"/>
            <class name="tests.ProductDetailsTest"/>
            <class name="tests.SignupTest"/>
            <class name="tests.LoginTest"/>
            <class name="tests.VideoPlayerTest"/>
            <class name="tests.BookingTableTests"/>
            <class name="tests.TypeOfBugsTests"/>
            <class name="tests.FindBugsTest"/>
            <class name="tests.ReportBugTest"/>
            <class name="tests.FooterTest"/>
        </classes>
    </test>
</suite>
